#%Module1.0#####################################################################

proc ModulesHelp { } {

puts stderr " "
puts stderr "This module loads the cuda library (cuda aware) built with the gnu12 toolchain."
puts stderr "\nVersion 11.8\n"

}
module-whatis "Name: cuda"
module-whatis "Version: 11.8"
module-whatis "Category: runtime library"
module-whatis "Description: CUDA implementation"

set     version			    11.8

setenv		CUDA_HOME	    /usr/local/cuda-11.8
setenv		CUDA_DIR	    /usr/local/cuda-11.8
prepend-path	PATH		    /usr/local/cuda-11.8/bin
prepend-path    LD_LIBRARY_PATH     /usr/local/cuda-11.8/lib64:/usr/local/cuda-11.8/nvvm/lib64:/usr/local/cuda-11.8/extras/CUPTI/lib64:/usr/local/cuda-11.8/extras/Debugger/lib64
